{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des commentaires{% endblock %}

{% block body %}
	<h1>Gestion des commentaires</h1>

    <div class="back-office">
		{% include "admin/shared/_aside.html.twig" %}
        <div class="back-office-comments">
            <table>
                <thead>
                    <tr>
                        <th>Utilisateur</th>
                        <th>Email</th>
                        <th>Film</th>
                        <th>Contenu</th>
                        <th>Date d'ajout</th>
                    </tr>
                </thead>
                <tbody>
                    {% for comment in comments %}
                        <tr>
                            <td data-label="Utilisateur">{{ comment.user.fullName }}</td>
                            <td data-label="Email">{{ comment.user.email }}</td>
                            <td data-label="Film">{{ comment.film.title }}</td>
                            <td data-label="Contenu">{{ comment.content | u.truncate(50, '...', false) }}</td>
                            <td data-label="Date d'ajout">{{ comment.createdAt|date('d/m/Y') }}</td>
                            <td class="action-btn">
                                <a href="{{ path('app_admin_comment_show', { 'id' : comment.id }) }}" class="btn btn-info">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_admin_comment_delete', { 'id' : comment.id }) }}" class="btn btn-danger">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
	</div>
{% endblock %}